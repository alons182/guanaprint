@media only screen and (min-width:  900px) 
	.mm-page
		background inherit
		margin 0px !important
		left 30% !important 
		top 0px !important
		width 70% !important
		position relative 
		z-index 1
		min-height 100%
		box-shadow none !important
		box-sizing (border-box)

	.mm-menu 
		padding 0px
		width 30% !important 
		position fixed
		z-index 0

	.mm-top.mm-menu 
		left 0px !important
		top 0px !important
		right auto !important
		bottom auto !important

	.mm-right.mm-menu 
		left 0px !important
		top 0px !important 
		right auto !important
		bottom auto !important

	.mm-bottom.mm-menu 
		left 0px !important
		top 0px !important 
		right auto !important
		bottom auto !important

	:first-child.mm-menu
		display block

	.mm-current.mm-menu 
		display block



