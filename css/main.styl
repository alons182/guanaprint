@import "nib"
@import "normalize.styl"
@import "iconos.styl"



$fusia = rgb(236, 3, 138)
$gris = rgb(166, 168, 171)
$amarillo = rgb(255,241, 0)
$celeste = rgb(0, 173, 238)


html, body
	margin 0px
	padding 0px
	width 100%
	height 100%


body
	color rgb(238, 238, 238) 
	line-height 22px 
	font-family 'Lato', sans-serif
	font-size 16px
	min-width 360px
	-webkit-text-size-adjust none
	background rgb(102, 102, 102)
	color white
h1 
	margin 0px 0px 10px
	color white//rgb(238, 238, 238)
	line-height 1
	font-size 60px 
	font-weight 700
	


p
	margin 0px 0px 10px
figure
	img 
		width 100%

.left
	float left 
.right 
	float right

#menu 
	background rgb(34, 34, 34)
	font-size 16px

	li::after
		margin-left 60px

	li 
		a
			line-height 40px

		a:hover 
			background-color rgba(0, 0, 0, 0.2)

	.icon 
		margin 0px 20px 0px 3px 
		opacity 0.6
	
	


#page
	box-shadow none !important

	nav
		display none

	a#open-icon-header
		left 0px 
		top 0px
		width 60px
		height 60px
		display block
		position absolute
		font-size 1em
		color $celeste
		text-decoration none
		padding .8em
		z-index 10

		.icon-menu
			font-size 1.5em



section
	height 575px
	position relative

	h1 
		text-transform uppercase
		text-shadow 1px 2px 5px rgba(0,0,0,.5)
	h2 
		background white
		color $fusia
		font-weight 300
		padding .5em
		border-radius 5px
		box-shadow 1px 2px 5px rgba(0,0,0,.5)

		span 
			font-weight 700
			font-size 1.2em
			text-transform uppercase

section > div
	margin auto
	padding 225px 20px 0px
	max-width 500px

#home
	background #FFF
#about
	background $amarillo
#services
	background $fusia
	height 650px
#upload
	background $gris
#upload > div
	padding 20px 20px 0px

	.progress
		position relative 
		width 400px 
		border 1px solid #ddd 
		padding 1px 
		border-radius 3px
		top -36px
		left 88px
		display none

		.bar
			background-color $fusia 
			width 0% 
			height 20px 
			border-radius 3px

		.percent  
			position absolute 
			display inline-block 
			top 3px 
			left 48% 
			font-size 12px
#contact
	background $celeste
	.map
		max-width 99.5% !important
		margin 0
		padding 0
	iframe
		width 100%
		height 415px
#contact > div
	padding 20px 20px 0px

	

#home > div
	padding 150px 20px 0px

	#logo
		//width 500px
		img 
			width 100%
	p 
		color $gris
		text-align center
#services > div
	padding 20px 20px 0px
	max-width 650px
	overflow hidden
	margin-bottom 20px
	#pf
		float left
		figure
			max-width 35%
			position absolute
			right 0
			top 0
	#gf
		float right
		margin-right 115px
		figure
			max-width 30%
			position absolute
			left 0
			bottom 0
	#dg
		position absolute
		right 0
		bottom 0
	


	

.field-wrapper
	margin 0
	clear both
	position relative
	overflow visible
	margin 0 0 10px 0

	label
		
		font-weight 500
		display block
		-webkit-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		padding-bottom .2em
		max-width 550px

	input[type="text"],input[type="password"],input[type="email"],textarea,#uploadFile
		width 96%
		max-width 550px
		position relative
		
		min-height 26px
		background-color #fff
		border 2px solid #c8c8c8
	textarea
		width 94%

	input[disabled]
		cursor not-allowed
		background-color #eeeeee !important
		
	textarea
		height 90px
		background-color #fff
	label.error
		display inline
		margin-left 3px
		color $fusia
		margin-top -5px
		font-size 12px
		font-weight 700
		background #fff
		border-radius 3px
		padding 2px
.button
	font-size 13px
	height 36px
	line-height 36px
	padding: 0 18px;
	cursor: pointer;
	overflow: hidden;
	font-weight: 700;
	//font-family: "Helvetica Neue",Arial,Helvetica,Verdana,sans-serif;
	text-align: center;
	vertical-align: middle;
	text-transform: capitalize;
	letter-spacing: .01em;
	margin-right: 18px;
	border: 0 none;
	border-radius: 3px;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
	color: #737373;
	background-color: #e0e0e0;

.p0
	background $fusia
	color #FFF
.p0:hover
	background rgb(34, 34, 34)

.fileUpload 
	position relative
	overflow hidden
	margin 0px 5px

	input 
		position absolute
		top 0
		right 0
		margin 0
		padding 0
		font-size 20px
		cursor pointer
		opacity 0
#uploadFile
	width 200px !important

.btn 
	display inline-block
	padding 4px 12px
	margin-bottom 0
	font-size 14px
	line-height 20px
	text-align center
	vertical-align middle
	cursor pointer
	color #333333
	text-shadow 0 1px 1px rgba(255, 255, 255, 0.75)
	background-color #f5f5f5
	background-image linear-gradient(to bottom, #ffffff, #e6e6e6)
	background-repeat repeat-x
	border-color #e6e6e6 #e6e6e6 #bfbfbf
	border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
	border: 1px solid #cccccc
	border-bottom-color #b3b3b3
	border-radius (4px)
	box-shadow inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)
	
